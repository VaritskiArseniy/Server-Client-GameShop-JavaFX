<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllerClasses.AddProgram">
    <children>
        <ImageView fitHeight="405.0" fitWidth="700.0" layoutY="-2.0" pickOnBounds="true">
            <image>
                <Image url="@../images/mainpage.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="priceField" layoutX="429.0" layoutY="175.0" promptText="Цена" style="-fx-prompt-text-fill: red;-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="quantityField" layoutX="429.0" layoutY="224.0" promptText="Количество" style="-fx-prompt-text-fill: red;-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="nameField" layoutX="429.0" layoutY="127.0" promptText="Название" style="-fx-prompt-text-fill: red;-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <TextField fx:id="descriptionField" layoutX="429.0" layoutY="273.0" promptText="Описание" style="-fx-prompt-text-fill: red;-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;">
            <font>
                <Font size="15.0" />
            </font>
        </TextField>
        <ChoiceBox fx:id="genreChoiceBox" layoutX="429.0" layoutY="76.0" prefHeight="27.0" prefWidth="187.0" style="-fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white; -fx-text-fill: black;" />
        <Text layoutX="80.0" layoutY="64.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Добавьте программу">
            <font>
                <Font name="Arial" size="40.0" />
            </font>
        </Text>
        <Button fx:id="backBtn" layoutX="159.0" layoutY="269.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="78.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 2px 2px 2px 2px; -fx-border-color: black;" text="Назад">
            <font>
                <Font name="Calisto MT" size="13.0" />
            </font>
        </Button>
        <Button fx:id="addProgramBtn" layoutX="417.0" layoutY="349.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="211.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: black;" text="Добавить">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
        </Button>
      <CheckBox fx:id="windowsCheckBox" layoutX="448.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleWindowsBox" text="Windows">
         <font>
            <Font size="15.0" />
         </font>
      </CheckBox>
      <CheckBox fx:id="macOSCheckBox" layoutX="536.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleMacOSBox" text="MacOS">
         <font>
            <Font size="15.0" />
         </font>
      </CheckBox>
    </children>
</AnchorPane>
